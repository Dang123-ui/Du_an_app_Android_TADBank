<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.fragment.HomeCustomerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_home_main_cus3">

        <LinearLayout
            android:id="@+id/lnloHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"

            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="50dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <!-- Logo nằm bên trái -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logo_topleft" />

            <!-- View trống để đẩy các nút sang phải -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <ImageButton
                android:id="@+id/imbtHomeNotify"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_home_notify"

                />

            <ImageButton
                android:id="@+id/imbtLogout"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_home_logout2"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_main_white_custom"
            android:gravity="center_vertical"
            android:orientation="vertical"

            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lnloHeader"
            app:layout_constraintVertical_bias="0"

            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"

                android:background="@drawable/bg_main_card"
                android:padding="15dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_main_card_info_opacity_custom"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="15dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="10dp"


                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_user" />

                        <TextView
                            android:id="@+id/txtHomeUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tran minh Thuyen"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textStyle="bold"

                            />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:weightSum="6">

                        <TextView
                            style="@style/TextAppearance.Material3.BodyLarge.Emphasized"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"

                            android:text="@string/so_tai_khoan"
                            android:textColor="@color/white"

                            />


                        <TextView
                            android:id="@+id/txtHomeAccNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="T123567"
                            android:textAllCaps="true"
                            android:textColor="@color/white"

                            />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageButton
                            android:id="@+id/imbtHomeCopyAcc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"

                            android:background="@android:color/transparent"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_home_copy"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:weightSum="6">


                        <TextView
                            style="@style/TextAppearance.Material3.BodyLarge.Emphasized"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="@string/so_du"
                            android:textColor="@color/white"

                            />

                        <TextView
                            android:id="@+id/txtHomeBalance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="2"
                            android:text="100,000 vnđ"
                            android:textAllCaps="true"
                            android:textColor="@color/white"

                            />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageButton
                            android:id="@+id/imbtHomeToggleBalance"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"

                            android:background="@android:color/transparent"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_password_eye_close"

                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="#DC1010" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"

                        >

                        <LinearLayout
                            android:id="@+id/lnloHomeHistoryTransac"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageButton
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"

                                android:background="@android:color/transparent"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_home_history_transaction"

                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="2"
                                android:text="@string/lich_su_giao_dich" />
                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#DC1010" />

                        <LinearLayout
                            android:id="@+id/lnloHomeAccManagement"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageButton
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"

                                android:background="@android:color/transparent"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_home_accountmanagement"

                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="2"
                                android:text="@string/tai_khoan_cua_ban" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <GridLayout
                android:id="@+id/gridQuickActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:rowCount="3"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutHomeCard"
                app:layout_constraintVertical_bias="0.0">

                <!-- Ô 1 -->
                <LinearLayout
                    android:id="@+id/lnloCardTranfer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_card_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:elevation="8dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_card_transfer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/chuyen_tien"
                        android:textStyle="bold"
                        android:minLines="2"
                        android:ellipsize="middle"
                        android:maxLines="2" />
                        />
                </LinearLayout>

                <!-- Ô 2 -->
                <LinearLayout
                    android:id="@+id/lnloCardDepositPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_card_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:elevation="8dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_card_money_deposit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/nap_tien_dien_thoai"
                        android:textStyle="bold"
                        android:minLines="2"
                        android:ellipsize="middle"
                        android:maxLines="2" />
                </LinearLayout>
                <!-- Ô 3 -->
                <LinearLayout
                    android:id="@+id/lnloCardBillPayment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_card_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"

                    android:orientation="vertical"
                    android:padding="5dp"
                    android:elevation="8dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_card_money_deposit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/thanh_toan_hoa_don"
                        android:textStyle="bold"
                        android:minLines="2"
                        android:ellipsize="middle"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Ô 4 -->
                <LinearLayout
                    android:id="@+id/lnloCardPlaneTicket"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_card_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:elevation="8dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_bill_plane" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/thanh_toan_ve_may_bay"
                        android:textStyle="bold"
                        android:minLines="2"
                        android:ellipsize="middle"
                        android:maxLines="2" />
                </LinearLayout>


                <!-- Ô 5 -->
                <LinearLayout
                    android:id="@+id/lnloCardTuitionPayment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_card_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:elevation="8dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_bill_tuition" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/thanh_toan_hoc_phi"
                        android:textStyle="bold"
                        android:minLines="2"
                        android:ellipsize="middle"
                        android:maxLines="2" />
                </LinearLayout>


                <!-- Ô 6 -->
                <LinearLayout
                    android:id="@+id/lnloCardDepositCredit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_card_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:elevation="8dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_card_creditdeposit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/nap_rut_tien"
                        android:textStyle="bold"
                        android:minLines="2"
                        android:ellipsize="middle"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Ô 7 -->
                <LinearLayout
                    android:id="@+id/lnloCarO7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_card_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:elevation="8dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_card_creditdeposit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Nạp/rút tiền"
                        android:textStyle="bold"
                        android:minLines="2"
                        android:ellipsize="middle"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Ô 8 -->
                <LinearLayout
                    android:id="@+id/lnloCardO8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_card_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:elevation="8dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_card_creditdeposit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Nạp/rút tiền"
                        android:textStyle="bold"
                        android:minLines="2"
                        android:ellipsize="middle"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Ô 9 -->
                <LinearLayout
                    android:id="@+id/lnloCardO9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_card_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:elevation="8dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_card_creditdeposit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Nạp/rút tiền"
                        android:textStyle="bold"
                        android:minLines="2"
                        android:ellipsize="middle"
                        android:maxLines="2" />
                </LinearLayout>


                <!-- … thêm các ô khác tương tự -->
            </GridLayout>

            <!-- View de lắp đầy navbar-->
            <View
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:backgroundTint="@color/black" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>