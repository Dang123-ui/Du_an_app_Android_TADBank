<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cviewTransferCardInfo"
    android:layout_height="120dp"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:padding="0dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"

    tools:context=".ui.fragment.CardPaymentFragment"
    >

    <LinearLayout
        android:background="@drawable/bg_transfer_card_tad"
        android:layout_height="wrap_content"

        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"

        >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingEnd="15dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/tai_khoan_nguon"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <View
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/txtTransferAccNumber"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="T123567"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_height="30dp"
            android:layout_width="wrap_content">

            <View
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                tools:ignore="NestedWeights" />

            <ImageButton
                android:background="@android:color/transparent"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:src="@drawable/ic_transfer_downarrow_white"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingEnd="15dp"
            android:paddingStart="0dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/so_du_de_chuyen_khoan"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <View
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/txtTransferAccBalance"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="10,000,000 VNÄ"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

