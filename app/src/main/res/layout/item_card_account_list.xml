<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cviewTransactionHistory"
    android:layout_height="100dp"
    android:layout_width="match_parent"
    android:layout_marginTop="0dp"
    android:padding="0dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    >


    <LinearLayout
        android:background="@drawable/bg_transfer_card_tad"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/txtTxnAccName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="TRAN MINH THUYEN"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <ImageButton
                android:id="@+id/imbtOpenAccDetail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_card_arrow_right"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingEnd="15dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/tai_khoan_nguon"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/txtTxnAccNumber"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="T123567"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingEnd="15dp"
            android:paddingStart="0dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/so_du_de_chuyen_khoan"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/txtTxnAccBalance"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="10,000,000 VNĐ"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>