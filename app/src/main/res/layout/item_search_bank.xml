<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imbtBankAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/ic_banklogo_vcb"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/underlineOrBorderGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBankName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="VietComBank"
        android:textSize="15sp"
        style="@style/TextAppearance.Material3.HeadlineLarge.Emphasized"

        app:layout_constraintStart_toEndOf="@id/imbtBankAvatar"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/txtBankLongName"
        style="@style/TextAppearance.Material3.BodySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        android:paddingStart="10dp"

        android:text="VietComBank NgÃ¢n hang tssss phan"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imbtBankAvatar"
        app:layout_constraintTop_toBottomOf="@+id/txtBankName" />


</androidx.constraintlayout.widget.ConstraintLayout>