<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="0dp"
    tools:context=".ui.fragment.HeaderActionFragment">
    <!-- Logo nằm bên trái -->
    <ImageButton
        android:id="@+id/imbtBackPrevious"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back_previous_activity" />

    <TextView
        android:id="@+id/txtTransferTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chuyen_tien"
        android:textSize="30sp"
        android:textStyle="bold"

        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/imbtHomeBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_home_back"

        />

</LinearLayout>